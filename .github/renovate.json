{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [ "config:base", "helpers:pinGitHubActionDigests" ],
	"labels": [ "Meta: Dependencies" ],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": [ "minor", "patch", "pin", "digest" ],
				"matchCurrentVersion": "!/^0/",
				"automerge": true,
				"ignoreTests": true
			}
		]
	},
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true,
		"ignoreTests": true
	}
}
